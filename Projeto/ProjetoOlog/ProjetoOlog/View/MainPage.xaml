    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetoOlog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="113,366,0,0" VerticalAlignment="Top" Click="MeuEvento" Width="160"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Margin="10,164,0,0" TextWrapping="Wrap" Text="Usuario" VerticalAlignment="Top" Width="380"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,229,0,0" VerticalAlignment="Top" Width="380"/>

    </Grid>
</Page>
